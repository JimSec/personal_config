!!##############
!!# Xft settings
!!##############

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!!Main

! special
 *.foreground:   #919191
 *.background:   #000000
 *.cursorColor:  #919191

! ! black
 *.color0:       #303030
 *.color8:       #5e5e5e

! ! red
 *.color1:       #c10023
 *.color9:       #dd0404

! ! green
 *.color2:       #a83334
 *.color10:      #ffa095

! ! yellow
 *.color3:       #b50012
 *.color11:      #ff948b

! ! blue
 *.color4:       #440000
 *.color12:      #fe3924

! ! magenta
 *.color5:       #7d534f
 *.color13:      #ebbbb5

! ! cyan
 *.color6:       #9a413d
 *.color14:      #ffaaa0
!
! ! white
 *.color7:       #c6c6c6
 *.color15:      #ffb4b4
!
 


!!################
!!# URXVT settings
!!################

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.loginShell:           true
URxvt.internalBorder:       3
URxvt.lineSpace:            0

!!# transparency - true or false (default)
!!#URxvt*transparent: true

!!# tint with any color; i.e., blue, red, tomato4, olivedrab2, etc.
!!#   some nice listings are at:
!!#     http://www.nisrv.com/drupal/?q=node/11
!!#     http://www.htmlgoodies.com/tutorials/colors/article.php/3478921
!!#URxvt*tintColor: S_base03

!!# shading - 0 to 99 darkens, 101 to 200 lightens.
!!#   Dont use with tintColor; just use a darker or lighter color instead.
URxvt*shading: 15

!!*URxvt*saveLines: 12000


!!# Monaco Linux font
URxvt*font: xft:Terminus:pixelsize=14
URxvt*boldFont: xft:Terminus:bold:pixelsize=14
URxvt*letterSpace: 0.5

!!# scrollbar - true (default) or false
URxvt*scrollBar: false

!!# scrollbar position - left=false (default) or right=true
!!URxvt*scrollBar_right: false

!!# scrollbar style - rxvt (default), plain, next, or xterm
URxvt*scrollstyle: plain

URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard


#### XTERM
XTerm*vt100.translations: #override \
    Shift Ctrl <Key> C: copy-selection(CLIPBOARD) \n\
    Shift Ctrl <Key> V: insert-selection(CLIPBOARD)
    Ctrl <Key> BackSpace: string(0x17)
xterm*background: black
xterm*foreground: red
